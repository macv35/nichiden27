<Window x:Name="window1" x:Class="Ogose.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ogose"
        mc:Ignorable="d"
        Title="おごせ: 日周緯度変コントローラ" Height="600" Width="800" Background="#FF111111" Foreground="{x:Null}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <ComboBox IsReadOnly="True" Margin="225,49,421,500" DockPanel.Dock="Left" x:Name="portComboBox" SelectedValuePath="DisplayString" DropDownOpened="portComboBox_DropDownOpened" Background="Black" Width="50" Height="20"/>
        <ToggleButton x:Name="ConnectButton" Checked="ConnectButton_IsCheckedChanged" Unchecked="ConnectButton_IsCheckedChanged" Margin="332,37,241,488" Width="100" Height="20">
            <ToggleButton.Style>
                <Style TargetType="{x:Type ToggleButton}">
                    <Setter Property="Content" Value="つなぐ" />
                    <Style.Triggers>
                        <Trigger Property="IsChecked" Value="true">
                            <Setter Property="Content" Value="きる" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ToggleButton.Style>
        </ToggleButton>
        <CheckBox x:Name="checkBox1" Content="フルスクリーン" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Background="Black" Foreground="#FFA6A6A6" Checked="checkBox1_Checked" Unchecked="checkBox1_Unchecked" RenderTransformOrigin="0.498,2.836" Grid.Column="1" Height="15" Width="81"/>
        <TextBlock x:Name="textBlock" Text="for test" Foreground="White" Margin="0,285,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Height="24" Grid.Column="1" Width="38"/>
        <Image x:Name="main_projector_27_w_png" Margin="174,138,131,106" Source="main_projector_27_w.png"/>
        <Button x:Name="diurnalPlusButton" Content="日周+" HorizontalAlignment="Left" Margin="148,285,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="diurnalMinusButton" Content="日周-" HorizontalAlignment="Left" Margin="490,285,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="diurnalStopButton" Content="日stop" HorizontalAlignment="Left" Margin="595,355,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="latitudePlusButton" Content="緯度+" HorizontalAlignment="Left" Margin="322,457,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="latitudeMinusButton" Content="緯度-" HorizontalAlignment="Left" Margin="322,113,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="latitudeStopButton" Content="緯stop" HorizontalAlignment="Left" Margin="595,320,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
